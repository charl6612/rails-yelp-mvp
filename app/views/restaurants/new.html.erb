<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-secondary" %>
<% end %>