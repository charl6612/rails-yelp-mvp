

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.address %></h6>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p>Note moyenne <%= @average %></p>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
<%= link_to "Back to list", restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>

<div>
<ul class="list-group" m-3>
    <% @reviews.each do |review| %>
  <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
</div>
